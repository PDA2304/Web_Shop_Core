@model WEB_Shop_core.Data.Models.Cart
@{
    ViewBag.Title = "Корзина";
}
<div>
    <h1 style="text-align: center; color: white; padding: 10px 0px 0px 0px">Корзина</h1><hr />
    <div>
        @{ if (Model.CartLines.Count == 0)
            {
                <img src="~/Assets/Аннотация 2020-09-14 095617.png" style="margin:auto; display:block; margin:0 auto; padding-top:20px; margin-bottom:20px" />
                <h2 style="text-align:center; color:#bababa; border-bottom:none; font-size:25px;">
                </h2>
                <h3 style="text-align:center; color:white; padding: 15px 0px 30px 0px; font-size:15px;">
                    <a href="@Url.Action("Index")" style="color:white;text-decoration: none; ">Нажмите здесь,</a>чтобы продолжить покупки
                </h3>
            }
            else
            {
                @for (int i = 0; i < Model.CartLines.Count; i++)
                {
                    <li>
                        @Model.CartLines[i].name - @Model.CartLines[i].prise <a href="/Home/RemoveFromCart?Number=@i">
                            Убрать из
                            корзины
                        </a>
                    </li>

                }
                @Model.FinalPrice
                <h3 style="border-bottom: none; padding:10px; text-align:center ">Оформление заказа</h3>
                <form asp-controller="home" asp-action="SuccZakk" method="post">
                    <div style="padding:10px;color:white;">
                        <div>
                            <span class="redstar">*</span> Имя:<br><input asp-for="Name" type="text" style="width: 50%;">
                        </div>
                        <div class="field adap_ord2">
                            <table border="0" cellspacing="0" cellpadding="0" width="50%" style="color: #fff;">
                                <tbody>

                                    <tr>
                                        <td><div class="adap"><span class="redstar">*</span> Электронная почта</div><input asp-for="Mail" type="text" style="width: 94%;"></td>
                                        <td><div class="adap"><span class="redstar">*</span> Телефон:</div><input asp-for="Telefon" type="text" style="width: 100%;"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div> Адрес доставки:<br><input asp-for="Address" type="text" style="width: 50%;"> </div>
                        <button type="submit">Отправить заказ</button>
                    </div>
                </form>
            }
        }
    </div>
</div>
